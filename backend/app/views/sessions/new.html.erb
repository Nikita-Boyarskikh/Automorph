<h1>Sign in</h1>

<%= form_for(:session, url: sessions_create_path) do |f| %>
    <p>
      <%= f.label :nickname %>
      <%= f.text_field :nickname %>
    </p>

    <p>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </p>

    <p>
      <%= f.submit 'Sign in' %>
    </p>
<% end %>

<p>New user? <%= link_to 'Sign up now!', signup_path %></p>